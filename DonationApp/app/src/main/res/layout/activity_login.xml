<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainback"
    android:layout_height="match_parent"
    tools:context=".Login">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="-22dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="start"
            android:background="@drawable/secondtop"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_marginLeft="100dp"
            android:layout_gravity="end"
            android:rotationX="-77"
            android:background="@drawable/third"/>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        app:cardElevation="90dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_marginTop="80dp"
            android:drawableLeft="@drawable/ic_launcher_background"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:endIconMode="clear_text"
            android:textColorHint="@color/black"
            app:endIconTint="@color/teal_700"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:textSize="12dp"
                android:id="@+id/uname"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="160dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@color/black"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/teal_700">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="12dp"
                android:inputType="textWebPassword"
                android:id="@+id/passs"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>



    </androidx.cardview.widget.CardView>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="150dp"
        android:layout_gravity="start"
        android:background="@drawable/third"/>

    <Button
        android:layout_marginTop="20dp"
        android:text="Login"
        android:id="@+id/bbtn"
        android:background="@drawable/btnback"
        android:layout_width="170dp"
        android:textAlignment="center"
        android:layout_marginLeft="100dp"
        android:layout_height="wrap_content"/>
</LinearLayout>

    <TextView
        android:layout_marginTop="1dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SignUp "
        android:textAlignment="center"
        android:letterSpacing="1"
        android:id="@+id/linktooption"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:padding="10dp"
        android:rotationX="11"/>


    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_gravity="end"
        android:background="@drawable/splash_back"/>

</LinearLayout>