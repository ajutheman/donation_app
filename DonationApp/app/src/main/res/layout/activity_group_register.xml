<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainback"
    android:layout_height="match_parent"
    tools:context=".GroupRegister">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="-22dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="start"
            android:background="@drawable/secondtop"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_marginLeft="170dp"
            android:layout_gravity="end"
            android:background="@drawable/splash_back"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="40dp"
        android:layout_marginTop="-28dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        app:cardElevation="-670dp"

        android:layout_marginBottom="-20dp"

        android:layout_width="match_parent"
        android:layout_height="550dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/appthird"
            android:textStyle="italic"
            android:gravity="center"
            android:text="

            Group -Member Donator  !!"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            app:endIconMode="clear_text"
            android:textColorHint="@color/black"
            app:endIconTint="@color/teal_700">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:textSize="12dp"
                android:id="@+id/nameid"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="240dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@color/black"
            app:endIconMode="clear_text"
            app:endIconTint="@color/teal_700">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="12dp"
                android:inputType="textEmailAddress"
                android:id="@+id/emailid"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="160dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@color/black"
            app:endIconMode="clear_text"
            app:endIconTint="@color/teal_700">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="12dp"
                android:inputType="textPostalAddress"
                android:id="@+id/addressid"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="320dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@color/black"
            app:endIconMode="clear_text"
            app:endIconTint="@color/teal_700">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="12dp"
                android:inputType="number"
                android:id="@+id/phoneid"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="400dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@color/black"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/teal_700">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textSize="12dp"
                android:inputType="textWebPassword"
                android:id="@+id/passwordid"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="230dp">

        <Button
            android:layout_gravity="center"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:paddingTop="20dp"
            android:background="@drawable/btnback"
            android:id="@+id/bbtn"/>

        <TextView
            android:id="@+id/linktooption"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:filterTouchesWhenObscured="true"
            android:fontFamily="cursive"
            android:text="Sign In"
            android:textColor="@color/white"
            android:textSize="23dp"
            android:textStyle="bold" />

    </LinearLayout>
    <ImageView
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:layout_gravity="end"
        android:src="@drawable/splash_back"/>
</LinearLayout>